{
  "compilerOptions": {
    "target": "ES2015",
    "module": "NodeNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "nodenext",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "@root/*": ["./*"],
      "@client/*": ["./client/*"],
      "@server/*": ["./server/*"]
    },
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["dist/", "client/**", "node_modules/**", "__tests__/**", "**/*.test.*", "*.config.*", ".env.example", "cypress/**/*", "cypress"]
}
