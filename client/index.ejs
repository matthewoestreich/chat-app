<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>RTChat</title>
    <link href="/public/bootstrap@5.3.3/css/bootstrap.min.css" rel="stylesheet" />
    <style>
      html,
      body {
        height: 100%;
      }
    </style>
  </head>
  <body>
    <div class="container-fluid min-vh-100 d-flex flex-column">
      <div class="row flex-grow-1 justify-content-center align-items-center">
        <div class="col-md-6 col-lg-4 col-sm-10 col-xs-12">
          <div class="text-center mb-5">
            <h1 class="display-1">RTChat</h1>
          </div>
          <div class="mb-5 text-center">
            <button id="join" class="w-100 btn btn-primary mt-3">Join Existing Room</button>
            <button id="create" class="w-100 btn btn-primary mt-3">Create New Room</button>
          </div>
        </div>
      </div>
    </div>
    <script nonce="<%= nonce %>">
      const join = document.getElementById("join");
      const create = document.getElementById("create");

      join.addEventListener("click", (event) => {
        event.preventDefault();
        window.location.pathname = "/join";
      });
      create.addEventListener("click", (event) => {
        event.preventDefault();
        window.location.pathname = "/create";
      });
    </script>
    <script src="/public/bootstrap@5.3.3/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
