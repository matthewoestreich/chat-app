    <!-- MAIN CONTENT -->
    <div class="container h-100 d-flex flex-column" style="padding-top: 4em">
      <div class="row text-center">
        <div class="col">
          <h1><%= name %></h1>
        </div>
      </div>
      <!-- Content Row (main row) -->
      <div class="row g-0 flex-fill min-h-0">
        <div class="col-2 d-flex flex-column rounded-start-5 h-90pct border min-h-0">
          <div class="d-flex justify-content-center align-items-center">
            <p class="fs-2">Members</p>
          </div>
          <div id="left-column-container" class="h-100 overf-y-scroll d-flex justify-content-center align-items-center">
            <div id="loading-members" class="d-none spinner-border" role="status">
