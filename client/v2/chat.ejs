                  <div class="card-footer">
                    <div class="input-group">
                      <textarea id="chat-text-input" class="form-control custom-control" rows="3" style="resize: none"></textarea>
                      <button id="send-chat-btn" class="input-group-addon btn btn-lg btn-primary">Send</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-2 d-flex flex-column rounded-end-5 h-90pct border min-h-0">
          <div class="d-flex justify-content-center align-items-center">
            <p class="fs-2">Rooms</p>
          </div>
          <div id="right-column-container" class="h-100 overf-y-scroll">
            <div class="d-flex h-100 justify-content-center align-items-center">
              <div id="loading-rooms" class="d-none spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
