{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "es2023"],
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist/",
    "rootDir": "../",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "paths": {
      "@root/*": ["../*"],
      "@client/*": ["../client/*"],
      "@server/*": ["../server/*"],
      "@src/*": ["../client/src/*"],
      "@components": ["./src/components/index.ts"],
      "@pages/*": ["./src/pages/*"],
      "@hooks": ["./src/hooks/index.ts"],
      "@styles/*": ["./src/styles/*"]
    }
    //"typeRoots": ["./types", "../node_modules/@types", "../types/index.d.ts", "../types/WebSocketApp.d.ts"]
  },
  "include": ["./*.ts", "src/index.tsx", "./src/**/*", "./types/**/*", "../types/**/*"],
  "exclude": ["./build", "./dist"]
}
