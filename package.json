{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "Real time chat app built with websockets",
  "main": "index.ts",
  "scripts": {
    "build": "npm run build:server && npm run build:frontend",
    "build:server": "tsc -p tsconfig.json",
    "build:frontend": "vite --config ./client/vite.config.ts build",
    "build:frontend:dev": "VITE_ENV=dev vite --config ./client/vite.config.ts build",
    "cy:open": "NODE_ENV=test cypress open",
    "cy:run": "NODE_ENV=test cypress run --spec 'cypress/e2e/*.cy.ts'",
    "fmt": "prettier --write \"**/*.{ts,tsx,js,jsx,json}\"",
    "jest:clearCache": "jest --clearCache",
    "lint": "eslint .",
    "postbuild": "tsc-alias -p tsconfig.json",
    "prebuild": "rm -rf dist",
    "preview:frontend": "vite --config ./client/vite.config.ts preview",
    "start": "npm run build:frontend:dev && tsx index.ts",
    "start:frontend": "vite --config ./client/vite.config.ts serve",
    "start:nodemon": "VITE_ENV=dev nodemon --verbose",
    "test:cy:open": "NODE_ENV=test tsx ./scripts/_startServerAndTest.ts --startServer npm start --url http://localhost:3000 --startTest npm run cy:open",
    "test:cy:run": "NODE_ENV=test tsx ./scripts/_startServerAndTest.ts --startServer npm start --url http://localhost:3000 --startTest npm run cy:run",
    "test:jest": "jest"
  },
  "keywords": [],
  "author": "Matt Oestreich",
  "prettier": {
    "plugins": [
      "@prettier/plugin-pug"
    ],
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 10000
  },
  "nodemonConfig": {
    "delay": 1500,
    "ext": "*",
    "ignore": [
      "**/*.db",
      "database.json",
      "./dist/**",
      "./data.json"
    ],
    "watch": [
      "server/**",
      "wss/**",
      "db/**",
      "index.ts"
    ],
    "exec": "npm run start"
  },
  "license": "CC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.7",
    "typescript": "^5.6.3",
    "uuid": "^11.0.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@faker-js/faker": "^9.2.0",
    "@prettier/plugin-pug": "^3.2.0",
    "@types/bcrypt": "^5.0.2",
    "@types/bootstrap": "^5.2.10",
    "@types/eslint": "^9.6.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.7",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/sqlite3": "^3.1.11",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "@vitejs/plugin-react": "^4.3.4",
    "babel-jest": "^29.7.0",
    "bootstrap": "^5.3.3",
    "cron": "^3.2.1",
    "cypress": "^14.0.0",
    "eslint": "^9.19.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "jest": "^29.7.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "pug": "^3.0.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.3",
    "ts-jest": "^29.2.5",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "vite": "^6.0.11"
  }
}
