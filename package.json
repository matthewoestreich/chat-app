{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "Real time chat app built with websockets",
  "main": "index.js",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc && node scripts/_build.js",
    "postbuild": "tsc-alias -p tsconfig.json",
    "start": "node index.js",
    "start:nodemon": "nodemon --verbose",
    "fmt": "prettier --write \"**/*.{ts,js,json,ejs}\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "type": "module",
  "keywords": [],
  "author": "Matt Oestreich",
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 10000,
    "overrides": [
      {
        "files": "*.ejs",
        "options": {
          "parser": "html"
        }
      }
    ]
  },
  "nodemonConfig": {
    "delay": 1500,
    "ext": "*",
    "ignore": [
      "**/*.db",
      "./dist/**"
    ],
    "watch": [
      "server/**",
      "wss/**",
      "db/**",
      "index.js"
    ],
    "exec": "npm run build && node dist/index.js"
  },
  "license": "CC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.7",
    "typescript": "^5.6.3",
    "uuid": "^11.0.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.9.0",
    "@types/sqlite3": "^3.1.11",
    "@types/uuid": "^10.0.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "tsc-alias": "^1.8.10"
  }
}
