{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "Real time chat app built with websockets",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:nodemon": "nodemon index.js",
    "fmt": "prettier --write \"**/*.{js,json,ejs}\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "type": "module",
  "keywords": [],
  "author": "Matt Oestreich",
  "imports": {
    "#@/*": "./*"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 10000,
    "overrides": [
      {
        "files": "*.ejs",
        "options": {
          "parser": "html"
        }
      }
    ]
  },
  "nodemonConfig": {
    "delay": 1500,
    "ext": "*",
    "watch": [
      "server/**",
      "wss/**",
      "db/**",
      "index.js"
    ]
  },
  "license": "CC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.7",
    "uuid": "^11.0.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "morgan": "^1.10.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3"
  }
}
