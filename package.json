{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "Real time chat app built with websockets",
  "main": "index.ts",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc -p tsconfig.json && tsx scripts/_build.ts",
    "postbuild": "tsc-alias -p tsconfig.json",
    "start:nodemon": "nodemon --verbose",
    "start": "tsx index.ts",
    "cy:run": "NODE_ENV=test cypress run --spec 'cypress/e2e/*.cy.ts'",
    "cy:open": "NODE_ENV=test cypress open",
    "fmt": "prettier --write \"**/*.{ts,js,json,pug}\"",
    "test:cy:run": "NODE_ENV=test tsx ./scripts/_startServerAndTest.ts --startServer npm start --url http://localhost:3000 --startTest npm run cy:run",
    "test:cy:open": "NODE_ENV=test tsx ./scripts/_startServerAndTest.ts --startServer npm start --url http://localhost:3000 --startTest npm run cy:open",
    "test:jest": "jest",
    "jest:clearCache": "jest --clearCache",
    "insert:fake:data": "tsx scripts/insertFakeData.ts",
    "db:backup": "tsx scripts/backupDatabaseToGist.ts",
    "db:restore": "tsx scripts/restoreDatabaseFromGist.ts"
  },
  "keywords": [],
  "author": "Matt Oestreich",
  "prettier": {
    "plugins": [
      "@prettier/plugin-pug"
    ],
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 10000
  },
  "nodemonConfig": {
    "delay": 1500,
    "ext": "*",
    "ignore": [
      "**/*.db",
      "./dist/**"
    ],
    "watch": [
      "server/**",
      "wss/**",
      "db/**",
      "index.ts"
    ],
    "exec": "npm run start"
  },
  "license": "CC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.7",
    "typescript": "^5.6.3",
    "uuid": "^11.0.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@faker-js/faker": "^9.2.0",
    "@prettier/plugin-pug": "^3.2.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.9.0",
    "@types/sqlite3": "^3.1.11",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "babel-jest": "^29.7.0",
    "cron": "^3.2.1",
    "cypress": "^14.0.0",
    "jest": "^29.7.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "pug": "^3.0.3",
    "ts-jest": "^29.2.5",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2"
  }
}
